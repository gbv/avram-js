{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "additionalProperties": false,
  "definitions": {
    "codelist": {
      "oneOf": [
        {
          "$ref": "#/definitions/non-empty-string"
        },
        {
          "$ref": "#/definitions/explicitcodelist"
        }
      ]
    },
    "explicitcodelist": {
      "additionalProperties": false,
      "patternProperties": {
        "^.+$": {
          "oneOf": [
            {
              "additionalProperties": false,
              "properties": {
                "code": {
                  "type": "string"
                },
                "created": {
                  "$ref": "#/definitions/timestamp"
                },
                "deprecated": {
                  "type": "boolean"
                },
                "description": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "modified": {
                  "$ref": "#/definitions/timestamp"
                }
              },
              "type": "object"
            },
            {
              "type": "string"
            }
          ]
        }
      },
      "type": "object"
    },
    "field-schedule": {
      "additionalProperties": false,
      "patternProperties": {
        "^.+$": {
          "additionalProperties": false,
          "properties": {
            "codes": {
              "$ref": "#/definitions/codelist"
            },
            "counter": {
              "pattern": "^[0-9]+(-[0-9]+)?$",
              "type": "string"
            },
            "created": {
              "$ref": "#/definitions/timestamp"
            },
            "deprecated": {
              "type": "boolean"
            },
            "description": {
              "type": "string"
            },
            "indicator1": {
              "$ref": "#/definitions/indicator"
            },
            "indicator2": {
              "$ref": "#/definitions/indicator"
            },
            "label": {
              "type": "string"
            },
            "modified": {
              "$ref": "#/definitions/timestamp"
            },
            "occurrence": {
              "pattern": "^[0-9][0-9](-[0-9][0-9])?$",
              "type": "string"
            },
            "pattern": {
              "$ref": "#/definitions/regex"
            },
            "pica3": {
              "type": "string"
            },
            "positions": {
              "$ref": "#/definitions/positions"
            },
            "records": {
              "$ref": "#/definitions/non-negative-integer"
            },
            "repeatable": {
              "type": "boolean"
            },
            "required": {
              "type": "boolean"
            },
            "rules": {
              "$ref": "#/definitions/rules"
            },
            "subfields": {
              "$ref": "#/definitions/subfield-schedule"
            },
            "tag": {
              "$ref": "#/definitions/non-empty-string"
            },
            "total": {
              "$ref": "#/definitions/non-negative-integer"
            },
            "types": {
              "patternProperties": {
                "^.+$": {
                  "$ref": "#/definitions/typed-field-definition",
                  "type": "object"
                }
              },
              "type": "object"
            },
            "url": {
              "$ref": "#/definitions/url"
            }
          },
          "type": "object"
        }
      },
      "type": "object"
    },
    "field-types": {
      "oneOf": [
        {
          "additionalProperties": false,
          "patternProperties": {
            "^.*$": {
              "additionalProperties": false,
              "properties": {
                "positions": {
                  "$ref": "#/definitions/positions"
                }
              },
              "required": [
                "positions"
              ],
              "type": "object"
            }
          },
          "type": "object"
        },
        {
          "additionalProperties": false,
          "patternProperties": {
            "^.*$": {
              "additionalProperties": false,
              "properties": {
                "subfields": {
                  "$ref": "#/definitions/subfield-schedule"
                }
              },
              "required": [
                "subfields"
              ],
              "type": "object"
            }
          },
          "type": "object"
        }
      ]
    },
    "indicator": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "additionalProperties": false,
          "properties": {
            "codes": {
              "$ref": "#/definitions/codelist"
            },
            "description": {
              "type": "string"
            },
            "label": {
              "type": "string"
            },
            "pattern": {
              "$ref": "#/definitions/regex"
            },
            "url": {
              "$ref": "#/definitions/url"
            }
          },
          "type": "object"
        }
      ]
    },
    "non-empty-string": {
      "minLength": 1,
      "type": "string"
    },
    "non-negative-integer": {
      "minimum": 0,
      "type": "integer"
    },
    "positions": {
      "additionalProperties": false,
      "patternProperties": {
        "^[0-9]+(-[0-9]+)?$": {
          "additionalProperties": false,
          "properties": {
            "codes": {
              "$ref": "#/definitions/codelist"
            },
            "flags": {
              "$ref": "#/definitions/codelist"
            },
            "description": {
              "type": "string"
            },
            "end": {
              "$ref": "#/definitions/non-negative-integer"
            },
            "label": {
              "type": "string"
            },
            "pattern": {
              "$ref": "#/definitions/regex"
            },
            "start": {
              "$ref": "#/definitions/non-negative-integer"
            },
            "url": {
              "$ref": "#/definitions/url"
            }
          },
          "type": "object"
        }
      },
      "type": "object"
    },
    "regex": {
      "$ref": "#/definitions/non-empty-string"
    },
    "rules": {
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object"
          }
        ]
      },
      "type": "array"
    },
    "subfield-schedule": {
      "additionalProperties": false,
      "patternProperties": {
        "^.*$": {
          "properties": {
            "code": {
              "type": "string"
            },
            "codes": {
              "$ref": "#/definitions/codelist"
            },
            "created": {
              "$ref": "#/definitions/timestamp"
            },
            "deprecated": {
              "type": "boolean"
            },
            "description": {
              "type": "string"
            },
            "label": {
              "type": "string"
            },
            "modified": {
              "$ref": "#/definitions/timestamp"
            },
            "order": {
              "description": "deprecated since 0.9.2",
              "type": "integer"
            },
            "pica3": {
              "type": "string"
            },
            "positions": {
              "$ref": "#/definitions/positions"
            },
            "records": {
              "$ref": "#/definitions/non-negative-integer"
            },
            "repeatable": {
              "type": "boolean"
            },
            "required": {
              "type": "boolean"
            },
            "rules": {
              "$ref": "#/definitions/rules"
            },
            "total": {
              "$ref": "#/definitions/non-negative-integer"
            },
            "url": {
              "$ref": "#/definitions/url"
            }
          },
          "type": "object"
        }
      },
      "type": "object"
    },
    "timestamp": {
      "type": "string"
    },
    "typed-field-definition": {
      "additionalProperties": false,
      "properties": {
        "codes": {
          "$ref": "#/definitions/codelist"
        },
        "description": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "pattern": {
          "$ref": "#/definitions/regex"
        },
        "positions": {
          "$ref": "#/definitions/positions"
        },
        "url": {
          "$ref": "#/definitions/url"
        }
      },
      "type": "object"
    },
    "url": {
      "format": "uri",
      "pattern": "^https?://",
      "type": "string"
    }
  },
  "description": "JSON Schema of Avram Schema Format to validata Avram Schemas",
  "properties": {
    "$schema": {
      "format": "uri",
      "type": "string"
    },
    "codelists": {
      "additionalProperties": false,
      "patternProperties": {
        "^.+$": {
          "anyOf": [
            {
              "$ref": "#/definitions/explicitcodelist",
              "description": "deprecated since 0.9.2"
            },
            {
              "additionalProperties": false,
              "properties": {
                "codes": {
                  "$ref": "#/definitions/explicitcodelist"
                },
                "created": {
                  "$ref": "#/definitions/timestamp"
                },
                "description": {
                  "type": "string"
                },
                "modified": {
                  "$ref": "#/definitions/timestamp"
                },
                "title": {
                  "type": "string"
                },
                "url": {
                  "$ref": "#/definitions/url"
                }
              },
              "required": [
                "codes"
              ],
              "type": "object"
            }
          ]
        }
      },
      "type": "object"
    },
    "created": {
      "$ref": "#/definitions/timestamp"
    },
    "description": {
      "type": "string"
    },
    "family": {
      "$ref": "#/definitions/non-empty-string"
    },
    "fields": {
      "$ref": "#/definitions/field-schedule"
    },
    "language": {
      "pattern": "^[a-zA-Z]{1,8}(-[a-zA-Z0-9]{1,8})*$",
      "type": "string"
    },
    "modified": {
      "$ref": "#/definitions/timestamp"
    },
    "profile": {
      "format": "uri",
      "type": "string"
    },
    "records": {
      "$ref": "#/definitions/non-negative-integer"
    },
    "rules": {
      "$ref": "#/definitions/rules"
    },
    "title": {
      "type": "string"
    },
    "url": {
      "$ref": "#/definitions/url"
    }
  },
  "required": [
    "fields"
  ],
  "title": "Avram Schema Format",
  "type": "object"
}
