{
  "name": "avram",
  "version": "0.6.12",
  "description": "Validation with Avram Schema Language",
  "avram": "0.9.7",
  "homepage": "https://github.com/gbv/avram-js#readme",
  "author": "Jakob VoÃŸ",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gbv/avram-js.git"
  },
  "main": "index.js",
  "type": "module",
  "files": [
    "index.js",
    "avram-schema.json",
    "lib/",
    "bin/"
  ],
  "bin": {
    "avram": "./bin/avram.js"
  },
  "scripts": {
    "test": "mocha",
    "pages": "./bin/pages.sh",
    "lint": "eslint './**/*.js';",
    "fix": "eslint --fix './**/*.js'",
    "coverage": "NODE_ENV=debug c8 --skip-full mocha",
    "lint-staged": "standard-readme && lint-staged",
    "release": "git checkout dev && git pull && npm test && npm version $SEMVER && git push && git checkout main && git merge dev && git push --follow-tags && git checkout dev",
    "release:patch": "SEMVER=patch npm run release",
    "release:minor": "SEMVER=minor npm run release",
    "release:major": "SEMVER=major npm run release"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "**/*.js": [
      "eslint --fix"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "c8": "^10.1.3",
    "chai": "^6.0.0",
    "chai-as-promised": "^8.0.2",
    "csv-parser": "^3.0.0",
    "ejs": "^3.1.9",
    "eslint": "^9.36.0",
    "eslint-config-gbv": "^2.6.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.2.0",
    "marcjs": "^2.0.1",
    "mocha": "^11.7.2",
    "pica-data": "^0.7.0",
    "pre-commit": "^1.2.2",
    "standard-readme": "^2.0.4"
  },
  "dependencies": {
    "coverage": "^0.4.1",
    "npm": "^11.6.0",
    "run": "^1.5.0"
  }
}
